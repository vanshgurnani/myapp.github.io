<!DOCTYPE html>
<html>
<head>
  <meta charset="utf-8">
  <title>Contact Table</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-gH2yIJqKdNHPEq0n4Mqa/HGKIhSkIHeL5AyhkYV8i59U5AR6csBvApHHNl/vI1Bx" crossorigin="anonymous">
  <style>
    body {
      background-image: url('back1.jpg');
      background-size: cover;
    }
    .custom-table {
      width: 80%;
      margin: 0 auto;
    }
    
    
  </style>
</head>
<body>
  <center>
  <h1 style="color: aliceblue; font-size: 45px; font-weight: bold; text-decoration: none">Contact Table</h1>
  <div class="table-responsive">
  <table class="table table-striped table-light custom-table">
    <thead>
      <tr>
        <th>Name</th>
        <th>Phone Number</th>
        <th>Email</th>
        <th>Delete</th>
        <th>Modify</th>
      </tr>
    </thead>
    <tbody>
      <% contacts.forEach(function(contact) { %>
        <tr>
          <td><%= contact.name %></td>
          <td><%= contact.pno %></td>
          <td><%= contact.email %></td>
          <td>
            <form method="POST" action="/cdelete/<%= contact.id %>">
              <button type="submit" class="btn btn-danger">Delete</button>
            </form>
          </td>
          <td>
            <form method="POST" action="/cmodify/<%= contact.id %>">           
              <!-- <input type="text" name="modifiedData" placeholder="Enter modified Data"> -->
              <select name="modifiedOption" >
                <option value="name">Name</option>
                <option value="pno">Phone No</option>
                <option value="email">email</option>
              </select>
              <input type="text" id="modifiedData" name="modifiedData" placeholder="Enter modified Data">

              <button type="submit" class="btn btn-warning">Modify</button>
            </form>
          </td>

        </tr>
      <% }); %>
    </tbody>
  </table>
  </div>
  </center>
  <script>
    function changeInputType() {
      var selectElement = document.getElementsByName('modifiedOption')[0];
      var inputElement = document.getElementById('modifiedData');
      
      if (selectElement.value === 'name') {
        inputElement.type = 'text';
      } else if (selectElement.value === 'pno') {
        inputElement.type = 'number';
      } else if (selectElement.value === 'email') {
        inputElement.type = 'text';
      }
    }
    
  </script>
</body>
</html>
