<!DOCTYPE html>
<html>
<head>
  <meta charset="utf-8">
  <title>Member Table</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-gH2yIJqKdNHPEq0n4Mqa/HGKIhSkIHeL5AyhkYV8i59U5AR6csBvApHHNl/vI1Bx" crossorigin="anonymous">
  <style>
    body {
      background-image: url('back1.jpg');
      background-size: cover;
    }
    .custom-table {
      width: 80%;
      margin: 0 auto;
    }
    
    
  </style>
</head>
<body>
  <center>
  <h1 style="color: aliceblue; font-size: 45px; font-weight: bold; text-decoration: none">Member Table</h1>
  <div class="table-responsive">
  <table class="table table-striped table-light custom-table">
    <thead>
      <tr>
        <th>Member Name</th>
        <th>Start Date</th>
        <th>End Date</th>
        <th>Type</th>
        <th>Delete</th>
        <th>Modify</th>
      </tr>
    </thead>
    <tbody>
      <% members.forEach(function(member) { %>
        <tr>
          <td><%= member.name %></td>
          <td><%= member.start_date %></td>
          <td><%= member.end_date %></td>
          <td><%= member.type %></td>
          <td>
            <form method="POST" action="/mdelete/<%= member.id %>">
              <button type="submit" class="btn btn-danger">Delete</button>
            </form>
          </td>
          <td>
            <form method="POST" action="/mmodify/<%= member.id %>">           
              <!-- <input type="text" name="modifiedData" placeholder="Enter modified Data"> -->
              <select name="modifiedOption" >
                <option value="name">Name</option>
                <option value="start_date">Start_Date</option>
                <option value="end_date">End_Date</option>
                <option value="type">Type</option>
              </select>
              <input type="text" id="modifiedData" name="modifiedData" placeholder="Enter modified Data">

              <button type="submit" class="btn btn-warning">Modify</button>
            </form>
          </td>

        </tr>
      <% }); %>
    </tbody>
  </table>
  </div>
  <p style="color: white; font-size: 20px; font-weight: bold; text-decoration: none">* Format for date should be "yyyy-mm-dd"</p>
  </center>
  <script>
    function changeInputType() {
      var selectElement = document.getElementsByName('modifiedOption')[0];
      var inputElement = document.getElementById('modifiedData');
      
      if (selectElement.value === 'name') {
        inputElement.type = 'text';
      } else if (selectElement.value === 'start_date') {
        inputElement.type = 'date';
      }
      else if (selectElement.value === 'end_date') {
        inputElement.type = 'date';
      }else if (selectElement.value === 'type') {
        inputElement.type = 'text';
      }
    }
    
  </script>
</body>
</html>
